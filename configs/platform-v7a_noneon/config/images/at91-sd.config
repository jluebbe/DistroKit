image @IMAGE@-boot.vfat {
	vfat {
		file boot.bin { image = @FSBL@ }
		file barebox.bin { image = @SSBL@ }
	}
	size = 3M
}

image @IMAGE@ {
	hdimage {
		align = 1M
		partition-table-type = hybrid
	}
	partition boot {
		image = @IMAGE@-boot.vfat
		partition-type = 0xc
		partition-type-uuid = F
		bootable = true
	}
	partition root-A {
		image = root.ext2
		partition-type-uuid = 69dad710-2ce4-4e3c-b16c-21a1d49abed3 # root-arm
	}
	partition data {
		size = 512M
	}
}
